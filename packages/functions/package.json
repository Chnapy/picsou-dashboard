{
  "name": "@picsou/functions",
  "version": "1.0.0",
  "scripts": {
    "build": "rimraf lib/ && tsc --project tsconfig.prod.json",
    "serve": "cross-env NODE_ENV=development && yarn build && firebase emulators:start --only functions,database --import ../../emulator-data",
    "shell": "yarn build && firebase functions:shell",
    "start": "yarn shell",
    "test": "cross-env NODE_ENV=test && jest --watchAll",
    "test-ci": "cross-env NODE_ENV=test jest",
    "test-integration": "yarn build  && cross-env NODE_ENV=test firebase emulators:exec \"yarn workspace @picsou/frontend test-no-env\"",
    "deploy": "firebase deploy --only functions,database",
    "logs": "firebase functions:log",
    "check-type": "tsc --noEmit"
  },
  "engines": {
    "node": "12"
  },
  "main": "lib/functions/src/index.js",
  "dependencies": {
    "date-fns": "2.16.1",
    "firebase-admin": "8.10.0",
    "firebase-functions": "3.6.1",
    "jsdom": "16.4.0",
    "node-fetch": "2.6.1"
  },
  "devDependencies": {
    "@types/jest": "26.0.13",
    "@types/jsdom": "16.2.4",
    "cross-env": "^7.0.2",
    "firebase-functions-test": "0.2.0",
    "jest": "26.4.2",
    "rimraf": "3.0.2",
    "ts-jest": "26.3.0",
    "typescript": "4.0.2"
  },
  "private": true
}
